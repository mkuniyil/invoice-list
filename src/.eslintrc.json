{
  "env": {
    "es6": true,
    "jest": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended",
    "react-app"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "modules": true,
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16.4.3"
    }
  },
  "rules": {
    "react/jsx-filename-extension": ["warn"]
  }
}
